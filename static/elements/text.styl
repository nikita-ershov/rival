.text {
    ul,ol {
        margin: 0 0 20px;
    }
    li {
        margin: 6px 0;
        padding: 0 0 0 8px;
        position: relative;
        
        &:before {
            content: "\e803";
            position: absolute;
            font-family: 'icons';
            font-size: 4px;
            left: 0;
        }
    }
    b {
        font-weight: 500;
    }
    h3 {
        margin-top: 30px;
        margin-bottom: 10px;
        
        &:first-child,          
        &:first-of-type {            
            margin-top: 0;
        }
    }
}