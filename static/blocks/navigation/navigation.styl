.navigation {
    background: #2d59a1;
    position: relative;
    
    &__list {
        color: #FFFFFF;
        font-size: 0;
    }
    &__item {
        display: inline-block;
        font-size: 17px;

        &.active,
        &:hover {
            
            .navigation__link {
                color: #416296;
                font-weight: 500;
                background: #FFFFFF;
            }
        }
        
        &:hover {
            .navigation__submenu {
                display: block;
            }
        }
    }
    a&__link {
        color: #FFFFFF;
        text-decoration: none;
        display: block;
        padding: 0 20px;
        height: 50px;
        line-height: 50px;
    }

    &__submenu {
        position: absolute;
        left: 0;
        width: 100%;
        background: #FFFFFF;
        top: 50px;
        color: #000000;
        z-index: 10;
        font-size: 16px;
        font-weight: 300;
        display: none;

        &:after {
            display: block;
            width: 100%;
            height: 8px;
            position: absolute;
            bottom: -8px;
            left: 0;
            content: "";
            background: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0) 100%);
        }

        .container {
            overflow: hidden;
        }
        .col-height {
            padding-top: 20px;
            padding-bottom: 40px;
        }
        *:before,
        *:after {
            border-spacing: 0;
        }

        .col_bg {
            background: #f4f7fa;
        }

        &__image {
            height: 110px;
            overflow: hidden;
        }
        &__title {
            font-size: 18px;
            color: #4568a1;
            font-weight: 400;

            &_blue {
                color: #31a3dd;
            }
            &_black {
                color: #000000;
            }
        }
        &__list {
            margin: 15px 0;
        }
        &__item {
           padding: 7px 0;
            a {
                color: #000000;
                &:hover {
                    font-weight: 400;
                    text-decoration: none;
                }
            }
        }
        
        &__text {
            margin: 15px 0 0;
        }
        &__link {
            margin: 15px 0 0;
        }
        

        &__type {
            font-size: 0;
            margin-bottom: 40px;
            &__item {
                font-size: 18px;
                display: inline-block;
                vertical-align: top;
                padding-top: 30px;
                padding-bottom: 30px;
                font-weight: 400;
                float: none;
            }
            &__image {
            }
            &__title {
                margin: 20px 0 0;
                color: #000000;
                a {
                    text-decoration: none;
                    color: #000000;
                    &:hover {
                        color: #4568a1;
                    }
                }
            }
        }


    }
}